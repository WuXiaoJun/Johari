<%
  user ||= @user
  surveys ||= user.surveys.find (:all , :order=> "updated_at DESC")

%>
<h3 class="my"><%= xn_user_name(user.name)%>调查表格详细信息 (共<%=surveys.length%> 个人参与了调查)</h3>
<%surveys.each do |s|%>
<p>
  <image src="/images/group.gif"/> &nbsp; <%= time_ago_in_words s.updated_at %>前: <span class="name"><%=h xn_user_name(s.poster_id) %></span>认为:
  <%=h s.content_str %>
</p>
<%end%>